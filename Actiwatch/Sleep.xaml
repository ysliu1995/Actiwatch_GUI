                </oxy:Plot.Axes>
            </oxy:Plot>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="0">
            <TextBlock x:Name="Day6Date" Style="{StaticResource MaterialDesignBody2TextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center">
                2020-06-02
            </TextBlock>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="1">
