        <Grid Grid.Row="4" Grid.Column="0">
            <TextBlock x:Name="Day4Date" Style="{StaticResource MaterialDesignBody2TextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center">
                2020-06-02
            </TextBlock>
        </Grid>
